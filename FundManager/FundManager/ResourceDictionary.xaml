<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FundManager">
    <Style TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#F5F5F5"></GradientStop>
                    <GradientStop Offset="1" Color="LightBlue"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush Stretch="Fill" ImageSource="Images/UBSBuilding.png" AlignmentY="Center" AlignmentX="Center"/>

            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="DisplayData">        
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontWeight" Value="Medium"/>       
    </Style>

</ResourceDictionary>